<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppShop.Views.MainPage" >
    <ContentPage.Content>
        <StackLayout BackgroundColor="{StaticResource BackColor}">
            <ImageButton Source="menu.png" BackgroundColor="{StaticResource BackColor}" HeightRequest="35" WidthRequest="40" Clicked="Menu_Clicked"  Pressed="Menu_Pressed"
                         HorizontalOptions="Start" VerticalOptions="Start" Margin="20,20" CornerRadius="5" Focused="Menu_Focused"  />
            <Label Text="Welcome to Main Page!" FontSize="20" TextColor="{StaticResource TextColor}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>